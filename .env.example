# Copy this to .env and update values before running

# MongoDB Configuration
MONGO_INITDB_ROOT_USERNAME=hawklets_root
MONGO_INITDB_ROOT_PASSWORD=change_this_password
MONGO_INITDB_DATABASE=hawklets_db

# PostgreSQL Configuration
POSTGRES_DB=hawklets
POSTGRES_USER=hawklets
POSTGRES_PASSWORD=change_this_password_postgres

# Redis Configuration (optional)
REDIS_HOST=redis
REDIS_PORT=6379

# JWT Configuration
JWT_SECRET_KEY=your-secret-key-change-in-production

# CORS Configuration
CORS_ORIGINS=https://hawklets.com

# Let's Encrypt Configuration (for production)
LETSENCRYPT_EMAIL=admin@hawklets.com

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Development/Production Mode
ENVIRONMENT=development
