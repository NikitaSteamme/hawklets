# Используйте официальный Python-образ как базу
FROM python:3.11-slim

# Установите рабочую директорию
WORKDIR /app

# Скопируйте зависимости
COPY requirements.txt ./

# Установите зависимости
RUN pip install --no-cache-dir -r requirements.txt

# Скопируйте остальной код приложения
COPY . .

# Откройте порт (измените, если у приложения другой порт)
EXPOSE 5000

# Запустите приложение (замените на вашу команду запуска)
CMD ["gunicorn", "-b", "0.0.0.0:5000", "app:app"]
